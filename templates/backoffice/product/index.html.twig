{% extends 'base-admin.html.twig' %}

{% block title %}Product List{% endblock %}

{% block body %}
    <h1>Product List</h1>
     <form method="POST" class="form-horizontal" >
                            <div class="row" >
                                <select class="form-select" name="sort"  style="width: 50%"  >
                                    <option value="name">SupplierName</option>
                                    <option value="nbr_exp">Unit price product </option>
                                    <option value="default">Quantity product </option>
                                </select>
                                <input type="submit" class="btn btn-purple btn-rounded " style="width: 20%" value="Tri">

                            </div>
   <div>
    <p style="100px" > <input  id="myInput"  type="text" placeholder="search">
        <img src="https://img.icons8.com/nolan/344/google-web-search.png" style="width:50px;height:50px;"/></a>

                    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Refproduct</th>
                <th>Suppliername</th>
                <th>Unitpriceproduct</th>
                <th>Quantityproduct</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        <tbody id="myTable">

        {% for product in products %}
            <tr>
            
                <td>{{ product.refproduct }}</td>
                <td>{{ product.suppliername }}</td>
                <td>{{ product.unitpriceproduct }}</td>
                <td>{{ product.quantityproduct }}</td>
               <td>
                    <a "btn btn-outline-primary" href="{{ path('app_product_show', {'idproduct': product.idproduct}) }}">show</a>
                    <a "btn btn-outline-primary" href="{{ path('app_product_edit', {'idproduct': product.idproduct}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
        <tbody id="search">
        </tbody>
    </table>
   
    <a class="btn btn-outline-primary" href="{{ path('app_product_new') }}">Create new</a>
    <a class="btn btn-outline-primary" href="{{ path('product_list') }}" >pdf</a>

     <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
{% endblock %}
